@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="h-100 d-flex bg-white justify-content-center align-items-center col-md-12 col-lg-8">
    <div class="mx-auto app-login-box col-sm-12 col-md-10 col-lg-9">
        <div>
            <img src="~/asset/images/claudlogo.png" width="100rem"/>
        </div>
        <h4 class="mb-0">
            <span class="d-block">Welcome back,</span>
            <span>Please sign in to your account.</span>
        </h4>
        <div class="divider row"></div>
        <div>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="">
                    <div class="col-md-6">
                        <div class="position-relative mb-3">
                            <label asp-for="Input.Email" for="exampleEmail" class="form-label">Email</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="position-relative mb-3">
                            <label asp-for="Input.Password" for="examplePassword" class="form-label">Password</label>
                            <div class="input-group">
                                <input asp-for="Input.Password" id="passwordInput" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <button type="button" id="showPasswordBtn" class="btn btn-sm btn-outline-secondary" style="display: none; ">
                                    <i id="eyeIcon" class="lnr-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="position-relative form-check mb-3">
                    <input name="check" id="exampleCheck" type="checkbox" class="form-check-input" asp-for="Input.RememberMe">
                    <label for="exampleCheck" class="form-label form-check-label">Keep me logged in</label>
                </div>
                <div class="divider row"></div>
                <div class="d-flex align-items-center">
                    <div class="ms-auto">
                        @* Enable this for, forgot password *@
                        @* <a asp-area="Identity" asp-page="/Account/ForgotPassword" class="btn-lg btn btn-link">Forgot Password?</a> *@
                        <button type="submit" class="btn btn-primary btn-lg">Login to Dashboard</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
